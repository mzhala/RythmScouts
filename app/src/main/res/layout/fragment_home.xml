<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginBottom="2dp"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover Events"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black" />

        <!-- Section 1: Happening Today / Soon -->
        <TextView
            android:id="@+id/todayLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Happening Today"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/todayViewPager"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginBottom="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/todayDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Section 2: Tickets Ending Soon -->
        <TextView
            android:id="@+id/endingSoonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tickets Ending Soon"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/endingSoonViewPager"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginBottom="8dp" />

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/endingSoonDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <ProgressBar
            android:id="@+id/homeProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
